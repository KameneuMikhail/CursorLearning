<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="CalculatorApp.MainWindow"
        Width="340"
        Height="580"
        CanResize="False"
        Title="Calculator"
        Background="#1C1C1E"
        WindowStartupLocation="CenterScreen">
  <Window.Styles>
    <Style Selector="Button.digit">
      <Setter Property="Background" Value="#505050"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="Width" Value="70"/>
      <Setter Property="Height" Value="70"/>
      <Setter Property="CornerRadius" Value="35"/>
      <Setter Property="FontSize" Value="28"/>
      <Setter Property="FontWeight" Value="Normal"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Padding" Value="0"/>
      <Setter Property="Margin" Value="5"/>
      <Setter Property="HorizontalContentAlignment" Value="Center"/>
      <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    <Style Selector="Button.digit:pointerover">
      <Setter Property="Background" Value="#606060"/>
    </Style>
    <Style Selector="Button.digit:pressed">
      <Setter Property="Background" Value="#404040"/>
    </Style>
    <Style Selector="Button.function">
      <Setter Property="Background" Value="#505050"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="Width" Value="70"/>
      <Setter Property="Height" Value="70"/>
      <Setter Property="CornerRadius" Value="35"/>
      <Setter Property="FontSize" Value="28"/>
      <Setter Property="FontWeight" Value="Normal"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Padding" Value="0"/>
      <Setter Property="Margin" Value="5"/>
      <Setter Property="HorizontalContentAlignment" Value="Center"/>
      <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    <Style Selector="Button.function:pointerover">
      <Setter Property="Background" Value="#606060"/>
    </Style>
    <Style Selector="Button.function:pressed">
      <Setter Property="Background" Value="#404040"/>
    </Style>
    <Style Selector="Button.operator">
      <Setter Property="Background" Value="#FF9500"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="Width" Value="70"/>
      <Setter Property="Height" Value="70"/>
      <Setter Property="CornerRadius" Value="35"/>
      <Setter Property="FontSize" Value="28"/>
      <Setter Property="FontWeight" Value="Normal"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Padding" Value="0"/>
      <Setter Property="Margin" Value="5"/>
      <Setter Property="HorizontalContentAlignment" Value="Center"/>
      <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    <Style Selector="Button.operator:pointerover">
      <Setter Property="Background" Value="#FFB340"/>
    </Style>
    <Style Selector="Button.operator:pressed">
      <Setter Property="Background" Value="#E6850E"/>
    </Style>
  </Window.Styles>
  
  <Grid RowDefinitions="Auto,*"
        Margin="20">
    <!-- Display -->
    <Border Grid.Row="0"
            Background="Transparent"
            Padding="15,20"
            Margin="0,0,0,20">
      <TextBlock x:Name="Display"
                 Text="0"
                 FontSize="64"
                 FontWeight="Light"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Center"
                 Foreground="White" />
    </Border>

    <!-- Buttons -->
    <Grid Grid.Row="1"
          RowDefinitions="*,*,*,*,*"
          ColumnDefinitions="*,*,*,*"
          HorizontalAlignment="Center">

      <!-- Row 0: ←, AC, %, ÷ -->
      <Button Grid.Row="0" Grid.Column="0" Content="←" Classes="function"
              Click="OnBackspaceClick" />
      <Button Grid.Row="0" Grid.Column="1" Content="AC" Classes="function"
              Click="OnClearClick" />
      <Button Grid.Row="0" Grid.Column="2" Content="%" Classes="function"
              Click="OnPercentClick" />
      <Button Grid.Row="0" Grid.Column="3" Content="÷" Classes="operator"
              Tag="divide"
              Click="OnOperatorClick" />

      <!-- Row 1: 7, 8, 9, × -->
      <Button Grid.Row="1" Grid.Column="0" Content="7" Classes="digit"
              Tag="7"
              Click="OnDigitClick" />
      <Button Grid.Row="1" Grid.Column="1" Content="8" Classes="digit"
              Tag="8"
              Click="OnDigitClick" />
      <Button Grid.Row="1" Grid.Column="2" Content="9" Classes="digit"
              Tag="9"
              Click="OnDigitClick" />
      <Button Grid.Row="1" Grid.Column="3" Content="×" Classes="operator"
              Tag="multiply"
              Click="OnOperatorClick" />

      <!-- Row 2: 4, 5, 6, − -->
      <Button Grid.Row="2" Grid.Column="0" Content="4" Classes="digit"
              Tag="4"
              Click="OnDigitClick" />
      <Button Grid.Row="2" Grid.Column="1" Content="5" Classes="digit"
              Tag="5"
              Click="OnDigitClick" />
      <Button Grid.Row="2" Grid.Column="2" Content="6" Classes="digit"
              Tag="6"
              Click="OnDigitClick" />
      <Button Grid.Row="2" Grid.Column="3" Content="−" Classes="operator"
              Tag="subtract"
              Click="OnOperatorClick" />

      <!-- Row 3: 1, 2, 3, + -->
      <Button Grid.Row="3" Grid.Column="0" Content="1" Classes="digit"
              Tag="1"
              Click="OnDigitClick" />
      <Button Grid.Row="3" Grid.Column="1" Content="2" Classes="digit"
              Tag="2"
              Click="OnDigitClick" />
      <Button Grid.Row="3" Grid.Column="2" Content="3" Classes="digit"
              Tag="3"
              Click="OnDigitClick" />
      <Button Grid.Row="3" Grid.Column="3" Content="+"
              Classes="operator"
              Tag="add"
              Click="OnOperatorClick" />

      <!-- Row 4: +/-, 0, ., = -->
      <Button Grid.Row="4" Grid.Column="0" Content="+/-" Classes="digit"
              Click="OnSignToggleClick" />
      <Button Grid.Row="4" Grid.Column="1" Content="0" Classes="digit"
              Tag="0"
              Click="OnDigitClick" />
      <Button Grid.Row="4" Grid.Column="2" Content="." Classes="digit"
              Click="OnDecimalClick" />
      <Button Grid.Row="4" Grid.Column="3" Content="="
              Classes="operator"
              Click="OnEqualsClick" />
    </Grid>
  </Grid>
</Window>

